<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:strokeWidth="10dp"
        app:strokeColor="@color/main_blue"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/search_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="음식 이름"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/search_useby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22.XX.XX"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_name"
                />

            <TextView
                android:id="@+id/dDay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="D-0"
                android:textSize="30dp"
                app:layout_constraintEnd_toStartOf="@+id/btn_take_item"
                />
            <Button
                android:id="@+id/btn_take_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="장바구니"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_delete_item"
                />
            <Button
                android:id="@+id/btn_delete_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="삭제"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>